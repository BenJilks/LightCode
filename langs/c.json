{
	"name": "c",
	"extensions": ["c", "h", "cpp", "hpp"],
	
	"scopes":
	[
		["(", ")"],
		["[", "]"],
		["{", "}"]
	],

	"tokens":
	{
		"keyword":
		{
			"keyword": 
			[
				"if",
				"else",
				"while",
				"for",
				"return",
				"typedef",
				"struct",
				"const",
				"static"
			]
		},
		
		"datatype":
		{
			"keyword":
			[
				"void",
				"long",
				"int",
				"short",
				"char",
				"unsigned",
				"float",
				"double"
			]
		},

		"macro":
		{
			"keyword":
			[
				"#if",
				"#ifdef",
				"#ifndef",
				"#else",
				"#endif"
			],

			"line":
			[
				"#include",
				"#define"
			]
		},
		
		"comment": 
		{
			"line": ["//"],
			"string": [["/*", "*/"]]
		},

		"number": 
		{
			"pattern": ["[0-9]+\\.[0-9]*f?"]
		},

		"string": 
		{
			"string":
			[
				["\"", "\""], 
				["'", "'"]
			]
		},

		"symbol":
		{
			"symbol":
			[
				"(", ")",
				"[", "]",
				"{", "}",
				"+", "-", "*",
				"=", ">", "<",
				"&", "|", "^",
				".", ";"
			]
		}
	}
}
